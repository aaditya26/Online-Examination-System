<p id="notice"><%= notice %></p>

<h1>Subcourses</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subcourses.each do |subcourse| %>
      <tr>
        <td><%= link_to 'Show', subcourse, class: "btn btn-light" %></td>
        <td><%= link_to 'Edit', edit_subcourse_path(subcourse), class: "btn btn-light" %></td>
        <td><%= link_to 'Destroy', subcourse, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-light" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Subcourse', new_subcourse_path, class: 'btn btn-primary btn-lg' %>
